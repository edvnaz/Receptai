<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cardView_img"
            android:layout_width="wrap_content"
            android:layout_height="60sp"
            android:layout_gravity="start|center_vertical"
            android:padding="2dp"
            android:src="@drawable/logo_2" />

        <TextView
            android:id="@+id/itemTextViewPav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/cardView_img"
            android:layout_toRightOf="@+id/cardView_img"
            android:padding="8dp"
            android:text="Ingred_pav" />

        <TextView
            android:id="@+id/itemTextViewIngred_sk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:text="Ingred_sk" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
