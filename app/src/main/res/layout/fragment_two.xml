<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/black_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/blank_result_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/blank_button_delete"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:background="@android:color/transparent"
                android:src="@drawable/delete_filled_50_x_black" />

        </LinearLayout>

        <!--
        <EditText
            android:id="@+id/blank_search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/black_results"
            android:visibility="gone" />
        -->

        <FrameLayout
            android:id="@+id/blank_search_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/black_results" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="90sp"
            android:layout_marginEnd="30sp"
            android:layout_marginRight="30sp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/blank_button_ok"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:background="@android:color/transparent"
                android:contentDescription="ok_button"
                android:scaleType="fitXY"
                android:src="@drawable/checked_100_green"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/blank_button_back"
                android:layout_width="65sp"
                android:layout_height="65sp"
                android:layout_marginTop="5sp"
                android:background="@android:color/transparent"
                android:contentDescription="back_button"
                android:scaleType="fitXY"
                android:src="@drawable/cancel_100_red"
                android:visibility="gone" />

        </LinearLayout>


    </RelativeLayout>
